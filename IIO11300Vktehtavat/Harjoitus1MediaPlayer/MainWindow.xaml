<Window x:Class="Harjoitus1MediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Harjoitus1MediaPlayer"
        mc:Ignorable="d"
        Title="My Fine MediaPlayer" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnPlay" Content="Play" HorizontalAlignment="Left" Margin="80,37,0,0" VerticalAlignment="Top" Width="75" Click="btnPlay_Click"/>
        <MediaElement x:Name="mediaElement" HorizontalAlignment="Left" Height="187" Margin="10,122,0,0" VerticalAlignment="Top" Width="497" LoadedBehavior="Manual"/>
        <Button x:Name="btnPause" Content="Pause" HorizontalAlignment="Left" Margin="185,37,0,0" VerticalAlignment="Top" Width="75" Click="btnPause_Click"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="274,37,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.186,0.495" Click="btnStop_Click"/>

    </Grid>
</Window>
